<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/dark_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_block"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/back_for_top_block_gl"

        android:elevation="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Главная"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/btn_open_menu"
            app:layout_constraintBottom_toBottomOf="@+id/btn_open_menu"
            app:layout_constraintStart_toEndOf="@+id/btn_open_menu"
            android:layout_marginStart="20dp"
            android:paddingBottom="3dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_open_menu"

            android:layout_width="40dp"
            android:layout_height="40dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:src="@drawable/baseline_menu_24"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_list_prod"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="80dp"

        android:elevation="20dp"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/top_block"

        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="1dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btn_backet"
        android:layout_width="200dp"
        android:layout_height="50dp"

        android:background="@drawable/back_for_tri_tochky"
        android:elevation="15dp"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_list_prod"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-25dp"
        >

        <TextView
            android:id="@+id/text_cart"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Корзина"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:gravity="center_vertical"

            app:layout_constraintEnd_toEndOf="parent"

            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/baseline_shopping_basket_24"
            android:rotation="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_cart"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>