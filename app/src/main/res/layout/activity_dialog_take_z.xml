<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:paddingHorizontal="50dp"
    android:layout_gravity="center"
    tools:context=".dialogTakeZ"
    android:elevation="10dp"
    android:background="@drawable/back_for_dialog"
    >

    <TextView
        android:id="@+id/itogSum"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        app:layout_constraintTop_toTopOf="parent"

        android:text="Итог: "
        android:textSize="25dp"
        android:fontFamily="serif"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/walletSum"

        android:layout_width="match_parent"
        android:layout_height="50dp"

        app:layout_constraintTop_toBottomOf="@+id/itogSum"
        android:layout_marginTop="10dp"

        android:text="Ваш счёт: "
        android:textSize="25dp"
        android:fontFamily="serif"
        android:gravity="center"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/prinyat_zakaz"

        android:layout_width="150dp"
        android:layout_height="50dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginBottom="20dp"

        android:background="@drawable/back_for_tri_tochky"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Принять"
            android:textColor="@color/white"
            android:fontFamily="serif"
            android:gravity="center"
            android:textSize="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>